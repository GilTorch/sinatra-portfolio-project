<div class="table-responsive">
        <table class="table table-striped table-sm">
          <thead>
            <tr>
              <th>Username</th>
              <th>Email</th>
              <th>Roles</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
          <% @users.each do |user| %>
            <tr>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td><%= user.roles.collect{|role| role.label}.join(",") %></td>
                <td>
                    <a class="btn btn-success" href="admin/users/<%=user.id%>">View</a>,
                    <a class="btn btn-secondary" href="admin/users/<%=user.id%>/edit">Edit</a>,
                    <form style="display:inline" method="DELETE">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
          <% end %>
          </tbody>
    </table>
</div>