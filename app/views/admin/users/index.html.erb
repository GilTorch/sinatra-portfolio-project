<input onKeyUp="searchUser(this.value)" class="form-control form-control-dark w-100" type="text" placeholder="Search" aria-label="Search">
<div class="table-responsive">
        <table id="searchResults" class="table table-striped table-sm">
          <thead>
            <tr>
              <th>ID</th>
              <th>Username</th>
              <th>Email</th>
              <th>Roles</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody className="tbody">
          <% @users.each do |user| %>
            <tr class="tr">
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.email || "No Email" %></td>
                <td><%= user.roles.collect{|role| role.label}.join(",") %></td>
                <td>
                    <a class="btn btn-success" data-id="<%= user.id %>" data-username="<%= user.username %>" data-email="<%= user.email%>" data-roles="<%= user.roles.collect{|role| role.label}.join(",") %>" onClick="fillModal(this,'view')" data-toggle="modal" data-target="#exampleModalCenter" href="#">View</a>
                    <a class="btn btn-secondary" data-id="<%= user.id %>" data-username="<%= user.username %>" data-email="<%= user.email%>" data-roles="<%= user.roles.collect{|role| role.label}.join(",") %>" onClick="fillModal(this,'edit')" data-toggle="modal" data-target="#exampleModalCenter" href="#">Edit</a>
                    <form style="display:inline" method="DELETE">
                        <button class="btn btn-danger" type="submit">Delete</button>
                    </form>
                </td>
            </tr>
          <% end %>
          </tbody>
    </table>
</div>